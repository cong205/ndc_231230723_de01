@model IEnumerable<ndc_231230723_de01.Models.NdcComputer>

@{
    ViewData["Title"] = "Danh sách máy tính";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<p>
    <a asp-action="NdcCreate" class="btn btn-primary">
        Thêm mới
    </a>
</p>

<table class="table table-striped table-hover align-middle">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.ndcComName)</th>
            <th>@Html.DisplayNameFor(model => model.ndcComPrice)</th>
            <th>@Html.DisplayNameFor(model => model.ndcComImage)</th>
            <th class="text-center">@Html.DisplayNameFor(model => model.ndcComStatus)</th>
            <th class="text-center">Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.ndcComName)</td>
                <td>@string.Format("{0:N0} VND", item.ndcComPrice)</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ndcComImage))
                    {
                        <img src="@item.ndcComImage" alt="Ảnh" width="80" class="img-thumbnail" />
                    }
                    else
                    {
                        <span class="text-muted">Chưa có ảnh</span>
                    }
                </td>
                <td class="text-center">
                    @if (item.ndcComStatus)
                    {
                        <span class="badge bg-success">Còn hàng</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Hết hàng</span>
                    }
                </td>
                <td class="text-center">
                    <a asp-action="NdcEdit" asp-route-id="@item.ndcComId" class="btn btn-sm btn-warning me-1">Sửa</a>
                    <a asp-action="NdcDetails" asp-route-id="@item.ndcComId" class="btn btn-sm btn-info me-1">Xem</a>
                    <a asp-action="NdcDelete" asp-route-id="@item.ndcComId" class="btn btn-sm btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
